<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - StageSpotter.Presentation</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/StageSpotter.Web.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <!-- Bestaande navigatie -->
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Analyseren" asp-action="Index">Analyseren</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Match" asp-action="Index">Aanbevelingen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Bedrijf" asp-action="Index">Bedrijven</a>
                </li>
            </ul>
            
            <!-- Rechts uitgelijnde knop en profiel -->
            <div class="d-flex align-items-center gap-2">
                    @if (User?.Identity?.IsAuthenticated == true && User.FindFirst("usertype")?.Value == "bedrijf")
                {
                    <a href="/Vacature/Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Nieuwe Vacature
                    </a>
                }

                <div class="dropdown">
                    <a class="btn btn-light dropdown-toggle d-flex align-items-center" href="#" role="button" id="profileMenu" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-4"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileMenu">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profiel</a></li>
                                @if (User.FindFirst("usertype")?.Value == "bedrijf")
                                {
                                    <li><a class="dropdown-item" asp-controller="Vacature" asp-action="Mijn">Mijn Vacatures</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-controller="Auth" asp-action="Logout" style="margin:0">
                                        <button class="dropdown-item" type="submit">Uitloggen</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Login">Inloggen</a></li>
                                <li><a class="dropdown-item" asp-controller="Auth" asp-action="Register">Registreren</a></li>
                            }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - StageSpotter
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>