@model StageSpotter.Web.Models.EditVacatureViewModel
@{
    ViewData["Title"] = "Vacature bewerken";
}
<div class="container mt-4">
    <h3>Vacature bewerken</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Titel" class="form-label"></label>
            <input asp-for="Titel" class="form-control" />
            <span asp-validation-for="Titel" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Beschrijving" class="form-label"></label>
            <textarea asp-for="Beschrijving" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Beschrijving" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Locatie" class="form-label"></label>
            <input asp-for="Locatie" class="form-control" />
            <span asp-validation-for="Locatie" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SoortStageId" class="form-label">Soort stage</label>
            <select asp-for="SoortStageId" class="form-select">
                <option value="0">Onbekend</option>
                <option value="1">Meeloop</option>
                <option value="2">Afstudeer</option>
                <option value="3">Werkstudent</option>
            </select>
            <span asp-validation-for="SoortStageId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="VacatureUrl" class="form-label">Vacature URL</label>
            <input asp-for="VacatureUrl" class="form-control" />
            <span asp-validation-for="VacatureUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Opslaan</button>
        <a asp-action="Mijn" class="btn btn-secondary ms-2">Annuleren</a>
    </form>
</div>
