@model IEnumerable<StageSpotter.Data.DTOs.BedrijfDto>
@{
    ViewData["Title"] = "Bedrijven";
}

<h2>Bedrijven</h2>
<div class="row">
    @foreach (var b in Model)
    {
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@b.Naam</h5>
                    <a class="btn btn-sm btn-primary" href="/Bedrijf/Details/@b.Id">Bekijk</a>
                </div>
            </div>
        </div>
    }
</div>
