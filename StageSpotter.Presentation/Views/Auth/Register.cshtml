@model StageSpotter.Data.DTOs.RegisterDto
@{
    ViewData["Title"] = "Registreren";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-3">Registreren</h3>
                    <form method="post" asp-action="Register">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" type="email" name="Email" value="@Model?.Email" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Wachtwoord</label>
                            <input class="form-control" type="password" name="Password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Account type</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="IsBedrijf" value="false" checked id="typeStudent">
                                <label class="form-check-label" for="typeStudent">Student</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="IsBedrijf" value="true" id="typeBedrijf">
                                <label class="form-check-label" for="typeBedrijf">Bedrijf</label>
                            </div>
                        </div>
                        <div id="bedrijfFields" style="display:none">
                            <div class="mb-3">
                                <label class="form-label">Bedrijfsnaam</label>
                                <input class="form-control" type="text" name="Bedrijfsnaam" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Bedrijf URL</label>
                                <input class="form-control" type="url" name="BedrijfUrl" placeholder="https://www.jouwbedrijf.nl" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">KvK-nummer</label>
                                <input class="form-control" type="text" name="KvKNummer" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Contactpersoon</label>
                                <input class="form-control" type="text" name="ContactPerson" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Contact email</label>
                                <input class="form-control" type="email" name="ContactEmail" />
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Registreer</button>
                        </div>
                    </form>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="mt-3 text-danger">
                            @foreach (var e in ViewData.ModelState.Values)
                            {
                                foreach (var err in e.Errors)
                                {
                                    <div>@err.ErrorMessage</div>
                                }
                            }
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    Al een account? <a asp-controller="Auth" asp-action="Login">Inloggen</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const studentRadio = document.getElementById('typeStudent');
    const bedrijfRadio = document.getElementById('typeBedrijf');
    const bedrijfFields = document.getElementById('bedrijfFields');
    function toggleFields(){
        bedrijfFields.style.display = bedrijfRadio.checked ? 'block' : 'none';
    }
    studentRadio.addEventListener('change', toggleFields);
    bedrijfRadio.addEventListener('change', toggleFields);
    toggleFields();
</script>
