@{
    ViewData["Title"] = "Analyseren";
}

<div class="container mt-4">
    <h2>CV Analyseren</h2>
    <p>Upload hier je CV als Word-bestand (.doc of .docx) om te analyseren.</p>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-controller="Analyseren" asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="file" class="form-label">Kies een bestand</label>
                    <input type="file" name="Bestand" id="file" class="form-control" accept=".doc,.docx" required />                </div>
                <button type="submit" class="btn btn-primary">Analyseren</button>
            </form>
        </div>
    </div>
            
            <div class="mt-3">
                <h5>Recente analyses</h5>
                @if (ViewData["SavedAnalyses"] is System.Collections.IEnumerable analyses)
                {
                    <ul class="list-group">
                        @foreach (var a in analyses)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>@(a.GetType().GetProperty("FileName").GetValue(a))</strong>
                                    <div class="text-muted small">@(a.GetType().GetProperty("CreatedAt").GetValue(a))</div>
                                </div>
                                <div>
                                    <a class="btn btn-sm btn-outline-primary" href="/Analyseren/LoadSaved/@(a.GetType().GetProperty("Id").GetValue(a))">Bekijk</a>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Geen recente analyses.</p>
                }
            </div>
</div>
