@model StageSpotter.Web.Models.CvResultaatViewModel

@{
    ViewData["Title"] = "Jouw CV Analyse";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <!-- Header Section -->
            <div class="text-center mb-5 fade-in-up">
                <h1 class="display-4 fw-bold text-gradient">Jouw CV Analyse</h1>
                <p class="lead text-muted">
                    Hieronder vind je de gedetailleerde feedback van onze AI-recruiter op 
                    <span class="badge bg-light text-dark border">@Model.BestandsNaam</span>
                </p>
            </div>

            <!-- Result Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden fade-in-up" style="animation-delay: 0.1s;">
                <div class="card-header bg-white border-bottom p-4 d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="icon-box bg-primary-subtle text-primary rounded-circle me-3 p-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-robot" viewBox="0 0 16 16">
                                <path d="M6 12.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5ZM3 8.062C3 6.76 4.235 5.765 5.53 5.886a26.58 26.58 0 0 0 4.94 0C11.765 5.765 13 6.76 13 8.062v1.157a.933.933 0 0 1-.765.935c-.845.147-2.34.346-4.235.346-1.895 0-3.39-.2-4.235-.346A.933.933 0 0 1 3 9.219V8.062Zm4.542-.827a.25.25 0 0 0-.217.068l-.92.9a24.767 24.767 0 0 1-1.871-.183l-.929-.914a.25.25 0 0 0-.268-.035L2.89 7.49C1.425 8.114 0.5 9.582 0.5 11.25V12a2.5 2.5 0 0 0 2.5 2.5h10a2.5 2.5 0 0 0 2.5-2.5v-.75c0-1.668-.925-3.136-2.39-3.76l-.442-.418a.25.25 0 0 0-.268.035l-.929.915a24.788 24.788 0 0 1-1.87.183l-.92-.9a.25.25 0 0 0-.217-.068Z"/>
                            </svg>
                        </div>
                        <h5 class="mb-0 fw-bold">AI Feedback Rapport</h5>
                    </div>
                    <div>
                        <button onclick="window.print()" class="btn btn-outline-secondary btn-sm rounded-pill">
                            <i class="bi bi-printer"></i> Opslaan als PDF
                        </button>
                    </div>
                </div>
                
                <div class="card-body p-4 p-md-5 bg-light-subtle">
                    <!-- Hidden raw content -->
                    <div id="raw-markdown" style="display:none;">@Model.AnalyseResultaat</div>
                    
                    <!-- Rendered content -->
                    <div id="markdown-content" class="markdown-body">
                        <div class="d-flex justify-content-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-white p-4 border-top">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <a asp-controller="Analyseren" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-arrow-left"></i> Nieuwe Analyse
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            Naar Vacatures <i class="bi bi-arrow-right"></i>
                        </a>
                        <form method="post" action="/Analyseren/SaveToProfile" style="display:inline">
                            <input type="hidden" name="cvBestandsnaam" value="@Model.BestandsNaam" />
                            <input type="hidden" name="resultaat" value="@Model.AnalyseResultaat" />
                            <button type="submit" class="btn btn-success ms-2">Analyse opslaan</button>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

<!-- Marked.js for Markdown rendering -->
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const rawContent = document.getElementById('raw-markdown').textContent;
        const contentDiv = document.getElementById('markdown-content');
        
        // Configure marked options if needed
        marked.setOptions({
            breaks: true, // Enable line breaks
            gfm: true     // Enable GitHub Flavored Markdown
        });

        // Render markdown
        if(rawContent && rawContent.trim().length > 0) {
            contentDiv.innerHTML = marked.parse(rawContent);
        } else {
            contentDiv.innerHTML = '<div class="alert alert-warning">Geen resultaat om weer te geven.</div>';
        }
    });
</script>

<style>
    /* Custom Animations */
    .fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Text Gradient */
    .text-gradient {
        background: linear-gradient(45deg, #0ea5e9, #2563eb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Markdown Content Styling */
    .markdown-body {
        font-family: 'Inter', sans-serif;
        line-height: 1.7;
        color: #334155;
    }

    .markdown-body h1, 
    .markdown-body h2, 
    .markdown-body h3 {
        color: #0f172a;
        font-weight: 700;
        margin-top: 1.5em;
        margin-bottom: 0.75em;
    }

    .markdown-body h2 {
        font-size: 1.5rem;
        border-bottom: 2px solid #e2e8f0;
        padding-bottom: 0.3em;
    }
    
    .markdown-body h3 {
        font-size: 1.25rem;
        color: #1e293b;
    }

    .markdown-body p {
        margin-bottom: 1em;
    }

    .markdown-body ul {
        padding-left: 1.5em;
        margin-bottom: 1em;
    }

    .markdown-body li {
        margin-bottom: 0.5em;
    }
    
    .markdown-body strong {
        color: #0ea5e9;
        font-weight: 600;
    }

    .markdown-body blockquote {
        border-left: 4px solid #0ea5e9;
        padding-left: 1em;
        color: #64748b;
        font-style: italic;
        background: #f8fafc;
        padding: 1rem;
        border-radius: 0 0.5rem 0.5rem 0;
    }
    
    /* Print Styles */
    @@media print {
        .btn, .card-footer, header, footer {
            display: none !important;
        }
        .card {
            box-shadow: none !important;
            border: none !important;
        }
        .container {
            width: 100% !important;
            max-width: none !important;
            padding: 0 !important;
        }
    }
</style>
